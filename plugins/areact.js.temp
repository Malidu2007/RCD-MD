let bots = false;
const { smd, bot_, react } = require('../lib');
let utd = false;

//---------------------------------------------------------------------------

smd({
  pattern: "react",
  alias: ["autoreaction", "autoreact"],
  desc: "Enable/disable auto reaction",
  category: "chats",
  filename: __filename,
}, async (message, text) => {
  try {
    let checkinfo = await bot_.findOne({ id: 'bot_' + message.user }) || await bot_.new({ id: 'bot_' + message.user });
    let action = text ? text.toLowerCase().trim() : '';

    if (action.startsWith('on') || action.includes('act') || action.includes('true')) {
      action = 'true';
    } else if (action.includes('cmd') || action.includes('enable')) {
      action = 'cmd';
    } else if (action.startsWith('off') || action.includes('disable') || action.includes('false')) {
      action = 'false';
    } else {
      action = '';
    }

    utd = true;
    if (!action) {
      await message.reply(`*_Auto_Reaction currently ${checkinfo.autoreaction === 'true' ? 'Enabled' : 'Disabled'}!_*\n${checkinfo.autoreaction === 'true' ? '' : `Use 'on/cmd/all/off' to set Auto_Reaction.`}\nStatus: ${checkinfo.autoreaction === 'true' ? 'on' : 'off'}`);
    } else {
      if (action === 'false') {
        if (checkinfo.autoreaction === 'false') {
          await message.reply('*_Auto_Reaction Already Disabled_*');
        } else {
          await bot_.updateOne({ id: 'bot_' + message.user }, { autoreaction: 'false' });
          await message.reply('*_Auto_Reaction Successfully Disabled!_*');
        }
      } else if (action === 'cmd' || action === 'enable' || action === 'true') {
        if (checkinfo.autoreaction === action) {
          await message.reply('*_Auto_Reaction Already Enabled_*');
        } else {
          await bot_.updateOne({ id: 'bot_' + message.user }, { autoreaction: action });
          await message.reply('*_Auto_Reaction Successfully Enabled!_*');
        }
      } else {
        await message.reply('*_Please provide valid instructions!_*\n*_Use true/all/cmd/off to set autoreaction!_*');
      }
    }
  } catch (e) {
    await message.error(`${e}\n\ncommand: react`, e);
  }
});

smd({ on: "main" }, async (msg, text, { icmd }) => {
  try {
    if (!msg || msg.reaction) return;
    if (!bots || utd) {
      bots = await bot_.findOne({ id: 'bot_' + msg.user });
      utd = false;
    }
    if (!bots || !bots.autoreaction || bots.autoreaction === 'false') return;
    else if (bots.autoreaction === 'true' || (icmd && bots.autoreaction === 'cmd')) {
      let emokis = emojis[Math.floor(Math.random() * emojis.length)];
      await react(msg, emokis);
    } else if (bots.autoreaction === 'all') {
      let mokis = mojis[Math.floor(Math.random() * mojis.length)];
      await react(msg, mokis);
    }
  } catch (e) {
    console.log("Error in auto reaction: ", e);
  }
});
